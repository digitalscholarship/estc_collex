<%# progress_bar: params: hash stats = { :pages_with_changes, :num_pages } %>
<% stats ||= "hide" %>
<% if stats != 'hide' %>
<div class='tw_progress_container'>
	<div class='tw_progress_title'>Percent Edited:</div>
	<div class='tw_progress_background'>
		<div class='tw_progress_bar' style='width: <%= stats[:pages_with_changes] * 100 / stats[:num_pages] %>%'></div>
	</div>
	<div class='tw_progress_number'><%= tw_percent_edited_display(stats) %>%</div>
</div>
<% end %>
