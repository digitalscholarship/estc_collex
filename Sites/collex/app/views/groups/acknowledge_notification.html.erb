<%
	group = Group.find(params[:group_id])
	case group.group_type
	when 'community' then tab_name = Setup.community_tab()
	when 'classroom' then tab_name = "Classroom"
	when 'peer-reviewed' then tab_name = "Publications"
	end
-%>
<% current_page tab_name -%>
<div class="inner_content_container">
	<div class="group_acknowledge">
		<p>
		<% if params[:type] == 'accept_request' -%>
		The user is now in the group <%= link_to(group.name, { :controller => 'groups', :action => 'show', :id => params[:group_id] }, { :class => 'nav_link' }) %>.
		<% elsif params[:type] == 'decline_request' -%>
		The user is NOT accepted into the group <%= link_to(group.name, { :controller => 'groups', :action => 'show', :id => params[:group_id] }, { :class => 'nav_link' }) %>.
		<% elsif params[:type] == 'join_group' -%>
		Welcome! You are now a member of <%= link_to(group.name, { :controller => 'groups', :action => 'show', :id => params[:group_id] }, { :class => 'nav_link' }) %>.
		<% elsif params[:type] == 'decline_group' -%>
		You have declined to be in the group <%= link_to(group.name, { :controller => 'groups', :action => 'show', :id => params[:group_id] }, { :class => 'nav_link' }) %>.
		<% end -%>
		</p>
		<img src="<%= image_path(LARGE_THUMBNAIL_IMAGE_PATH) %>" alt="" />
	</div>
	<div class="clear_both"></div>
</div>
