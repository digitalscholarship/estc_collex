<%# summary: params: ActiveRecord comment, int thread_id, bool can_delete -%>
<% comment_info = get_comment_header_info(comment) -%>
<p>
	<% if comment_info[:thumbnail] != nil -%>
		<%= render :partial => '/forum/img_with_progress_spinner', :locals => { :src => comment_info[:thumbnail], :alt => 'thumbnail', :klass => "FH_post_image", :width => 100, :height => 125 } %>
	<% end -%>
	<%= link_to forum_title_with_tooltip(comment_info[:title], comment.comment), "/forum/view_thread?thread=#{thread_id}", :class => 'FH_post_title nav_link tooltip' %>
	<%= raw("<br /><span class='group_comment'>#{comment_info[:group_comment]}</span>") if comment_info[:group_comment].length > 0 -%>
</p>
Last updated by <%= get_user_link(comment_info[:last_comment_author]) %><br /><%= comment_time_format_relative(comment_info[:last_comment_time]) %>


