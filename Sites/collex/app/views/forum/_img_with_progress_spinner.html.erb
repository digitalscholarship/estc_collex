<%# img_with_progress_spinner : params: src, alt, klass=nil, width, height, title=nil -%>
<% title ||= '' %>
<% klass ||= '' %>
<% if width > height -%>
	<% size_str = "height='#{height}px'" %>
<% else -%>
	<% size_str = "width='#{width}px'" %>
<% end -%>
<% title_str = title == '' ? '' : "title='#{title}'" %>
<img class='progress_timeout <%= klass %>' src="<%= image_path(PROGRESS_SPINNER_PATH) %>" alt="<%= alt %>" <%= title_str %> <%= size_str %> data-noimage="<%=image_path(SPINNER_TIMEOUT_PATH) %>" />
<img class="<%= klass %> hidden" src="<%= src %>" alt="<%= alt %>" <%= title_str %> onload="finishedLoadingImage($(this).previous(), $(this), <%= width %>, <%= height %>);" />
